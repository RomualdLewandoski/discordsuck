{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <div class="login-card">
        <div class="text-center text-white font-weight-bold">Connexion</div>
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form method="post">
            <div class="form-group">
                <label for="inputUsername">Pseudo</label>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required
                       autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary btn-discord col-12">Connexion</button>
                </div>
                <div class="col-6">
                    <a href="{{ path('app_register') }}" class="btn btn-primary btn-discord col-12">Inscription</a>
                </div>
            </div>

        </form>
    </div>

{% endblock %}

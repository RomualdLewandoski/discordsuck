{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="login-card">
        <div class="text-center text-white font-weight-bold">Inscription</div>
        {% for flashError in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}
        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary btn-discord col-12">Inscription</button>
                </div>
                <div class="col-6">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-discord col-12">Connexion</a>
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
